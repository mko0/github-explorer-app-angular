  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "type": "npm",
      "script": "test",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "type": "shell",
      "label": "Docker development",
      "command": "docker",
      "args": [
        "compose",
        "-f",
        "${workspaceFolder}/docker/docker-compose.dev.yml",
        "up"
      ],
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Docker build",
      "command": "docker",
      "args": [
        "compose",
        "-f",
        "${workspaceFolder}/docker/docker-compose.yml",
        "up",
        "--build"
      ],
      "problemMatcher": []
    }
  ]
}
