{
  "name": "github-explorer-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "npm run test:spec && npm run test:cy",
    "test:spec": "ng test --browsers ChromeHeadlessNoSandbox --watch false",
    "test:spec:dev": "ng test",
    "test:cy": "cypress run --component --browser chrome --reporter junit --reporter-options \"mochaFile=test-output/cy.[hash].xml\"",
    "test:cy:dev": "cypress open",
    "lint": "ng lint",
    "stylelint": "npx stylelint **/*.scss",
    "prettier": "npx prettier --write .",
    "openapi:gen": "openapi-generator-cli generate",
    "prepare": "husky"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.0.0",
    "@angular/common": "^19.0.0",
    "@angular/compiler": "^19.0.0",
    "@angular/core": "^19.0.0",
    "@angular/forms": "^19.0.0",
    "@angular/platform-browser": "^19.0.0",
    "@angular/platform-browser-dynamic": "^19.0.0",
    "@angular/router": "^19.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.0.3",
    "@angular/cli": "^19.0.3",
    "@angular/compiler-cli": "^19.0.0",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@openapitools/openapi-generator-cli": "^2.15.3",
    "@types/jasmine": "~5.1.0",
    "angular-eslint": "19.0.2",
    "cypress": "^13.17.0",
    "eslint": "^9.16.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "jasmine-core": "~5.4.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "karma-junit-reporter": "^2.0.1",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "stylelint": "^16.12.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "8.18.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint",
      "prettier --write"
    ],
    "*.html": [
      "eslint",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint",
      "prettier --write"
    ]
  }
}
